<!DOCTYPE html>
<html>
<head>
  <title>Weatherful</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="page">

  <!-- Header -->
  <div id="header">
    <a href="/"><img src="/weatherful_logo.png" border="0" align="middle" id="logo"/></a> <div class="mission">An honest picture of the weather</div>

    <div id="header-bottom">

      <!-- Location Form -->
      <form action="" method="POST">
        <input type="text" name="location" id="location" value="Search Location"/>
      </form>
      <!-- /Location Form -->

      <!-- Weather Report -->
      <div id="weather-report"></div>
      <!-- /Weather Report -->
    </div>
  </div>
  <!-- /Header -->

  <div id="content">
    <%= yield %>
  </div>

  <!-- Footer -->
  <div id="footer">
    
  </div>
  <!-- /Footer -->
</div>

</body>
</html>